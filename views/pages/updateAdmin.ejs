<%- include('header') %>
<div class="container mt-4">
    <div class="row justify-content-center">
        <form action="/UpdateNews" method="post" enctype="multipart/form-data" class="col-md-8">
            
            <input type="text" name="editid" id="" value="<%= single.id %>">
            <div class="mb-3">
                <label for="title" class="form-label">Category</label>
                <input type="text" id="category" name="category" class="form-control" value="<%= single.category %>">
            </div>
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" id="title" name="title" class="form-control" value="<%= single.title %>">
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea id="description" name="description" class="form-control" rows="4"><%= single.description %></textarea>
            </div>

            <div class="mb-3">
                <label for="date" class="form-label">Date</label>
                <input type="date" id="date" name="date" class="form-control" value="<%= single.date %>">
            </div>

            <div class="mb-3 updateimg">
                <label for="image" class="form-label">File</label>
                <input type="file" id="image" name="image" class="form-control" onchange="previewImage(this)">
                <img id="imagePreview" src="<%= single.image %>" alt="img" class="form-control" >
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-success">Save</button>
            </div>
        </form>
    </div>
</div>

<script>
    function previewImage(input) {
        const preview = document.getElementById('imagePreview');
        const file = input.files[0];
        const reader = new FileReader();

        reader.onloadend = function () {
            preview.src = reader.result;
        };

        if (file) {
            reader.readAsDataURL(file);
        } else {
            preview.src = "";
        }
    }
</script>

<%- include('footer') %>
