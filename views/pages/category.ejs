<%- include('header') %>

    <div class="container mt-4">
        <div class="row justify-content-center">

        </div>
    </div>

    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-lg-8 mb-4">
                <div class="table-responsive ">
                    <table class="table table-bordered table-striped">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">No</th>
                                <th scope="col">Category Name</th>
                                <th scope="col">Image</th>
                                <th scope="col">Action</th>
                                <!-- Add other table headers based on your data structure -->
                            </tr>
                        </thead>

                        <tbody >
                            <% category.map((val,i)=>{i++ %>
                                <tr>
                                    <td>
                                        <%= i %>
                                    </td>
                                    <td>
                                        <%= val.cat_name %>
                                    </td>
                                    <td>
                                        <img src="<%= val.cat_image %>" alt="" width="100px" height="100px">
                                    </td>
                                    <td>
                                        <a href="/deleteCategory?id=<%= val.id %>" class="btn btn-danger text-white">Delete</a>
                                        <a href="/editCategory?id=<%= val.id %>" class="btn btn-success text-white">Edit</a>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>

                    </table>


                </div>
                <div class="d-flex justify-content-center">
                    <a href="/categoryAdd"><button class="btn btn-success text-white">Add New Category</button></a>
                </div>

                <div class="d-flex justify-content-center">
                    <a href="#" class="btn btn-warning  m-1">Car</a>
                    <a href="#" class="btn btn-danger text-white m-1">bike</a>
                    <a href="#" class="btn btn-secondary m-1">bus</a>
                </div>
            </div>

            <!-- Your Contact form HTML here -->

        </div>
    </div>
    <%- include('footer') %>