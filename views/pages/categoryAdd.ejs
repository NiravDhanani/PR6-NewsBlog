<%- include('header') %>
<div class="container mt-4">
    <div class="row justify-content-center">
        <form action="/newCategoryAdd" method="post" enctype="multipart/form-data" class="col-md-8">
            
            <div class="mb-3">
                <label for="title" class="form-label">Category</label>
                <input type="text" id="category" name="cat_name" class="form-control">
            </div>
            
            <div class="mb-3 updateimg">
                <label for="image" class="form-label">File</label>
                <input type="file" id="image" name="cat_image" class="form-control" onchange="previewImage(this)">
                <img id="imagePreview" src='/public/assets/images/logo.png'  class="form-control" >
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-success">Save</button>
            </div>
        </form>
    </div>
</div>


<script>
    function previewImage(input) {
        const preview = document.getElementById('imagePreview');
        const file = input.files[0];
        const reader = new FileReader();

        reader.onloadend = function () {
            preview.src = reader.result;
        };

        if (file) {
            reader.readAsDataURL(file);
        } else {
            preview.src = "";
        }
    }
</script>
