<%- include('header') %>
<div class="container mt-4">
    <div class="row justify-content-center">
        <form action="/newsubCategoryAdd" method="post" enctype="multipart/form-data" class="col-md-8">
            <div class="mb-3">
                <label for="title" class="form-label"> Category</label>
                <select name="category" id="">
                    <option value="">--Category--</option>
                    <% category.map((val)=>{ %> 
                        <option value="<%= val.id %>"><%= val.cat_name %></option>
                    <%  }) %>
                </select>
              
            </div>

            <div class="mb-3">
                <label for="title" class="form-label"> Sub-Category</label>
                <input type="text" id="category" name="subcat_name" class="form-control">
            </div>

            <div class="mb-3">
                <label for="title" class="form-label"> Sub-Date</label>
                <input type="date" id="category" name="subcat_date" class="form-control">
            </div>
              
            <div class="mb-3 updateimg">
                <label for="subcat_image" class="form-label">File</label>
                <input type="file" id="subcat_image" name="subcat_image" class="form-control" onchange="previewsubcat_image(this)">
                <img id="subcat_imagePreview" src='/public/assets/subcat_images/logo.png'  class="form-control" >
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-success">Save</button>
            </div>
        </form>
    </div>
</div>


<script>
    function previewsubcat_image(input) {
        const preview = document.getElementById('subcat_imagePreview');
        const file = input.files[0];
        const reader = new FileReader();

        reader.onloadend = function () {
            preview.src = reader.result;
        };

        if (file) {
            reader.readAsDataURL(file);
        } else {
            preview.src = "";
        }
    }
</script>
<%- include('footer') %>
