<%- include('header') %>

<div class="container mt-4">
    <div class="row justify-content-center">
        <% record.map((admindata) => { %>
            <div class="col-lg-12 mb-4">
                <div class="card flex-md-row">
                    <div class='col-xl-4 col-lg-4 col-md-4 col-sm-12 p-0'>
                        <img src="<%= admindata.image %>" width="100%" class="card-img-top" alt="Image">
                    </div>
                    <div class="card-body d-flex flex-column justify-content-between col-lg-8 col-xl-8 col-md-8 col-sm-12">
                        <div>
                            <a href="#" class="category text-decoration-none"><%= admindata.category %> </a>
                            <h5 class="card-title mt-2">
                                <%= admindata.title %>
                            </h5>
                            <div class="card-text-container">
                                <p class="card-text">
                                    <%= admindata.description %>
                                </p>
                            </div>
                        </div>
                        <div class="d-flex flex-row align-items-start">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">
                                    <strong>Date:</strong>
                                    <%= admindata.date %>
                                </li>
                            </ul>
                            <div class="card-actions  d-flex flex-row">
                                <a href="/deleteAdminData?id=<%= admindata.id %>" class="btn btn-danger ">Delete</a>
                                <a href="/editAdminData?id=<%= admindata.id %>" class="btn btn-primary">Edit</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include('footer') %>
