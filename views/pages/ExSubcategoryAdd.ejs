<%- include('header') %>
<div class="container mt-4">
    <div class="row justify-content-center">
        <form action="/newexsubCategoryAdd" method="post" enctype="multipart/form-data" class="col-md-8">
            <div class="mb-3">
                <label for="title" class="form-label"> Category</label>
                <select name="category" id="">
                    <option value="">--Category--</option>
                    <% category.map((val)=>{ %> 
                        <option value="<%= val.id %>"><%= val.cat_name %></option>
                    <%  }) %>
                </select>
            </div>

            <div class="mb-3">
                <label for="title" class="form-label"> Sub Category</label>
                <select name="subcategory" id="">
                    <option value="">--Sub Category--</option>
                    <% subcategory.map((val)=>{ %> 
                        <option value="<%= val.id %>"><%= val.subcat_name %></option>
                    <%  }) %>
                </select>
            </div>


            <div class="mb-3">
                <label for="title" class="form-label"> Extra Sub-Category</label>
                <input type="text" id="category" name="excat_name" class="form-control">
            </div>

            <div class="mb-3 updateimg">
                <label for="image" class="form-label">File</label>
                <input type="file" id="image" name="Eximage" class="form-control" onchange="previewImage(this)">
                <img id="imagePreview" src='/public/assets/images/logo.png'  class="form-control" >
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-success">Save</button>
            </div>
        </form>
    </div>
</div>


<script>
    function previewImage(input) {
        const preview = document.getElementById('imagePreview');
        const file = input.files[0];
        const reader = new FileReader();

        reader.onloadend = function () {
            preview.src = reader.result;
        };

        if (file) {
            reader.readAsDataURL(file);
        } else {
            preview.src = "";
        }
    }
</script>
<%- include('footer') %>
